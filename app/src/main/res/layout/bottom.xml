<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="#F5F5F5"
    android:gravity="center">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/tab_practice"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/tab_practice_img"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/practice_gray"
            android:background="#00000000"/>
        <TextView
            android:id="@+id/tab_practice_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            android:text="练习"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tab_upload"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/tab_upload_img"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/upload_gray"
            android:background="#00000000"/>
        <TextView
            android:id="@+id/tab_upload_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            android:text="上传"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tab_collect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/tab_collect_img"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/collection_gray"
            android:background="#00000000"/>
        <TextView
            android:id="@+id/tab_collect_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            android:text="收藏"/>
    </LinearLayout>
</LinearLayout>