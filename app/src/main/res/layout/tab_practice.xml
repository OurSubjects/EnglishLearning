<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/first_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FF7F50"
        app:contentPadding="10dp"
        app:cardCornerRadius="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <Button
            android:id="@+id/to_phonetic"
            android:background="#FF7F50"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="音标练习"
            android:textSize="20sp"
            android:gravity="center">
        </Button>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/now_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/first_cardView"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="当前在背"
        android:textSize="25sp">
    </TextView>
    <Button
        android:id="@+id/book_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_cardView"
        app:layout_constraintBaseline_toBaselineOf="@+id/now_choose"
        android:text="换本书背"
        android:textSize="15sp"
        android:background="@drawable/btn_backgroung"
        style="?android:attr/borderlessButtonStyle">
    </Button>
    <androidx.cardview.widget.CardView
        android:id="@+id/second_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#F8F8FF"
        app:contentPadding="10dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/now_choose">
        <RelativeLayout
            android:id="@+id/layout_relative_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/book_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="25dp"
                android:scaleType="fitXY"
                android:src="@drawable/book_1">
            </ImageView>
            <TextView
                android:id="@+id/book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="英语单词"
                android:layout_toRightOf="@id/book_image"
                android:maxLength="10"
                android:textSize="25sp">
            </TextView>
            <TextView
                android:id="@+id/book_word_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="词汇量：127"
                android:layout_toRightOf="@id/book_image"
                android:layout_below="@id/book_name"
                android:textSize="15sp">
            </TextView>
            <Button
                android:id="@+id/to_word"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="单词练习"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_below="@id/book_image"
                android:background="@drawable/btn_backgroung_orange"
                style="?android:attr/borderlessButtonStyle">
            </Button>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/third_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FF7F50"
        app:contentPadding="10dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/second_cardView">
        <Button
            android:id="@+id/to_listen"
            android:background="#FF7F50"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="听力练习"
            android:textSize="20sp"
            android:gravity="center">
        </Button>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>