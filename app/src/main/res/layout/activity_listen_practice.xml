<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/text_Notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Practice Model"
        android:textSize="32dp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/text_Question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="The Question Will Show Here"
        android:textSize="20dp"
        android:fontFamily="monospace"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_Notice"
        />

    <TextView
        android:id="@+id/text_Answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="The Answer Will Show Here"
        android:textSize="20dp"
        android:fontFamily="monospace"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button_Back"
        />



    <Button
        android:id="@+id/button_Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Back"
        android:textSize="24dp"
        android:fontFamily="monospace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/button_CheckAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="CheckAnswer"
        android:textSize="24dp"
        android:fontFamily="monospace"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


    <Button
        android:id="@+id/button_Play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Play"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@+id/text_Question"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/button_Pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Pause"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@+id/text_Question"
        app:layout_constraintLeft_toRightOf="@+id/button_Play"
        />

    <Button
        android:id="@+id/button_Stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Stop"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@+id/text_Question"
        app:layout_constraintLeft_toRightOf="@+id/button_Pause"
        />



</androidx.constraintlayout.widget.ConstraintLayout>