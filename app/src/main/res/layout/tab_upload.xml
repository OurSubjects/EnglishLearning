<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/content_word"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:text="导入单词"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:background="#DCDCDC"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>
    <androidx.cardview.widget.CardView
        android:id="@+id/first_cardView_upload"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardBackgroundColor="#FF7F50"
        app:contentPadding="10dp"
        app:cardCornerRadius="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content_word">
        <RelativeLayout
            android:id="@+id/to_wordUpload"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/text_1"
                android:text="单词输入"
                android:textSize="22sp"
                android:textColor="#ffffff"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:text="黏贴输入或文件输入英文单词"
                android:textSize="10sp"
                android:textColor="#ffffff"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:layout_below="@id/text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:text=">"
                android:textSize="35sp"
                android:textColor="#ffffff"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
             </TextView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/content_listen"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:text="导入听力材料"
        android:textSize="15sp"
        android:background="#DCDCDC"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_cardView_upload">
    </TextView>
    <androidx.cardview.widget.CardView
        android:id="@+id/second_cardView_upload"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardBackgroundColor="#32CD32"
        app:contentPadding="10dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/content_listen">
        <RelativeLayout
            android:id="@+id/to_listenUpload"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/text_2"
                android:text="听力材料输入"
                android:textSize="22sp"
                android:textColor="#ffffff"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:text="黏贴输入或文件输入听力材料"
                android:textSize="10sp"
                android:textColor="#ffffff"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:layout_below="@id/text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:text=">"
                android:textSize="35sp"
                android:textColor="#ffffff"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>