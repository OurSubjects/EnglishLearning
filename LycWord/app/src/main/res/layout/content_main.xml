<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/txt_TXTinput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TxtInput"
        android:textStyle="bold"
        android:textSize="42dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:fontFamily="monospace"
        />

    <EditText
        android:id="@+id/edit_TXTinput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write Here"
        android:maxHeight="500dp"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/txt_TXTinput"
        />

    <Button
        android:id="@+id/button_OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="OK"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_TXTinput"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/button_Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Cancel"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_TXTinput"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/button_Clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Clear"
        android:textSize="24dp"
        app:layout_constraintLeft_toRightOf="@+id/button_OK"
        app:layout_constraintTop_toBottomOf="@+id/edit_TXTinput"
        />





</androidx.constraintlayout.widget.ConstraintLayout>